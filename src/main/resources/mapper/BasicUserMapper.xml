<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smarthealth.diningroom.mapper.BasicUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.smarthealth.diningroom.entity.BasicUser">
        <id column="user_id" property="userId" />
        <result column="nick_name" property="nickName" />
        <result column="gender" property="gender" />
        <result column="province" property="province" />
        <result column="city" property="city" />
        <result column="avatar_url" property="avatarUrl" />
        <result column="create_time" property="createTime" />
        <result column="status" property="status" />
        <result column="phone" property="phone" />
        <result column="open_id" property="openId" />
        <result column="height" property="height" />
        <result column="weight" property="weight" />
        <result column="birthday" property="birthday" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id, nick_name, gender, province, city, avatar_url, create_time, status, phone, open_id, height, weight, birthday
    </sql>

</mapper>
